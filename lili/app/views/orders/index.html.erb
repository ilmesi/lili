<h1>Listing orders</h1>

<%= link_to 'New order', new_order_path %>

<table class="table table-striped">
  <tr>
    <th>Date</th>
    <th>Items</th>
    <th colspan="3"></th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.items.length %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
    </tr>
  <% end %>
</table>

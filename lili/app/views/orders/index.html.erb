<h1>
  Listing orders
  <a class="btn btn-large btn-success" href="<%= new_order_path %>"><span class="glyphicon glyphicon-plus"></span></a>
</h1>

<table class="table table-striped">
  <tr>
    <th>Date</th>
    <th>Items</th>
    <th colspan="3"></th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.items.length %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
    </tr>
  <% end %>
</table>

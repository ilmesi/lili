<h1>
  Listing products
  <a class="btn btn-large btn-success" href="<%= new_product_path %>"><span class="glyphicon glyphicon-plus"></span></a>
</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Supplier</th>
    <th colspan="3"></th>
  </tr>

  <% if @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.supplier.name %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end.empty? %>
    <td colspan="6">You have no pending products. <%= link_to 'Create one!', new_product_path %></td>
  <% end %>
</table>

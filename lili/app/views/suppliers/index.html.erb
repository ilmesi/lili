<h1>
  Listing suppliers
  <a class="btn btn-large btn-success" href="<%= new_supplier_path %>"><span class="glyphicon glyphicon-plus"></span></a>
</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th colspan="3"></th>
  </tr>

  <% @suppliers.each do |supplier| %>
    <tr>
      <td><%= supplier.name %></td>
      <td><%= supplier.phone %></td>
      <td><%= link_to 'Show', supplier_path(supplier) %></td>
      <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
      <td><%= link_to 'Destroy', supplier_path(supplier),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= form_tag user_sessions_path, {:class => "form-signing", :method => :post} do %>
    <h2 class="form-signin-heading">Please sign in</h2>
    <% if flash[:alert] %>
        <ul><li><%= flash[:alert] %></li></ul>
    <% end %>
    <%= text_field_tag :email, nil, :placeholder => "Email address", :class => "form-control" %>
    <%= password_field_tag :password, nil, :placeholder => "Password", :class => "form-control" %>
    <%= submit_tag "Login", :class => "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= form_for @user, :html => {:class => "form-signing"} do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <% if @user.errors.any? %>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>

  <%= f.text_field :email, :class => "form-control", :placeholder => "Email address" %>
  <%= f.text_field :password, :class => "form-control", :placeholder => "Password" %>
  <%= f.text_field :password_confirmation, :class => "form-control", :placeholder => "Repeat your password" %>
  <%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
<% end %>
